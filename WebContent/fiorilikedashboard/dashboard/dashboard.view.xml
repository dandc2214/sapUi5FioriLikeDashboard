<mvc:View controllerName="fiorilikedashboard.dashboard.dashboard"
	xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc">
	
	<FlexBox
		height="100%"
		width="100%"
		alignItems="Center"
		justifyContent="Center"
		xmlns:blockcolor="sap.uxap.sample.SharedBlocks"
		xmlns:html="http://www.w3.org/1999/xhtml">
		<items>
			<FlexBox
				height="100%"
				width="80%"
				alignItems="Start"
				justifyContent="Start"
				direction="Column">
				<items>
					<html:div class="sapUiTinyMarginBegin sapUiTinyMarginTop" style="font-family: Arial,Helvetica,sans-serif; color: #ffffff; font-size: 1.5rem; font-weight: normal;
					">
						Bienvenido
					</html:div>
					<html:div>
						<SlideTile class="sapUiTinyMarginBegin sapUiTinyMarginTop">
							<tiles>
								<GenericTile
									backgroundImage="test-resources/sap/m/demokit/sample/SlideTile/images/NewsImage2.png"
									frameType="TwoByOne" press="pressOnTileOne">
									<tileContent>
										<TileContent footer="August 21, 2016">
											<content>
												<NewsContent
													contentText="SAP Unveils Powerful New Player Comparision Tool Exclusively on NFL.com"
													subheader="Today, SAP News">
												</NewsContent>
											</content>
										</TileContent>
									</tileContent>
								</GenericTile>
								<GenericTile
									backgroundImage="test-resources/sap/m/demokit/sample/SlideTile/images/NewsImage1.png"
									frameType="TwoByOne" press="pressOnTileTwo">
									<tileContent>
										<TileContent footer="August 21, 2016">
											<content>
												<NewsContent
													contentText="Wind Map: Monitoring Real-Time and Forecasted Wind Conditions across the Globe"
													subheader="Today, SAP News">
												</NewsContent>
											</content>
										</TileContent>
									</tileContent>
								</GenericTile>
							</tiles>
						</SlideTile>
						<GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" header="Feed Tile that shows updates of the last feeds given to a specific topic:"
							frameType="TwoByOne" press="press">
							<tileContent>
								<TileContent footer="New Notifications">
									<content>
										<FeedContent contentText="@@notify Great outcome of the Presentation today. New functionality well received."
											subheader="About 1 minute ago in Computer Market" value="352">
										</FeedContent>
									</content>
								</TileContent>
							</tileContent>
						</GenericTile>
					</html:div>
					<html:div>
						<html:div class="sapUiTinyMarginBegin sapUiTinyMarginTop" style="font-family: Arial,Helvetica,sans-serif; color: #ffffff; font-size: 1.5rem; font-weight: normal;
						">
							CRM
						</html:div>
						<GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" header="Cumulative Totals" subheader="Expenses" press="press">
							<tileContent>
								<TileContent unit="Unit" footer="Footer Text">
									<content>
										<NumericContent value="1762" icon="sap-icon://line-charts"/>
									</content>
								</TileContent>
							</tileContent>
						</GenericTile>
						
						<GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" header="Cumulative Totals" subheader="Expenses" press="press">
							<tileContent>
								<TileContent unit="Unit" footer="Footer Text">
									<content>
										<NumericContent value="12"/>
									</content>
								</TileContent>
							</tileContent>
						</GenericTile>
					</html:div>
				</items>
			</FlexBox>
		</items>
	</FlexBox>
	
	
